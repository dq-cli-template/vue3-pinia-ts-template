{
  "name": "vue-admin",
  "version": "0.0.1",
  "description": "一个基于vue3+typescript+pinia的后台管理系统",
  "main": "./src/main.ts",
  "sideEffects": [
    "*.css",
    "*.less",
    "*.scss"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged --allow-empty"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "cross-env NODE_ENV=production webpack --config build/webpack.config.ts",
    "serve": "cross-env NODE_ENV=development webpack serve --config build/webpack.config.ts",
    "dev": "cross-env NODE_ENV=development webpack serve --config build/webpack.config.ts",
    "watch": "cross-env NODE_ENV=development webpack --config build/webpack.config.ts",
    "dll": "webpack --config build/webpack.config.dll.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/left0ver/vue-admin.git"
  },
  "keywords": [
    "vue-admin"
  ],
  "author": "leftover",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/left0ver/vue-admin/issues"
  },
  "homepage": "https://github.com/left0ver/vue-admin#readme",
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^18.0.0",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "@vue/compiler-sfc": "^3.2.37",
    "add-asset-html-webpack-plugin": "^5.0.2",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.1.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.0.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "postcss-less": "^6.0.0",
    "postcss-loader": "^7.0.0",
    "postcss-preset-env": "^7.7.2",
    "prettier": "2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-selector-no-empty": "^1.0.9",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vue-loader": "^17.0.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0"
  },
  "lint-staged": {
    "*{.js,ts,vue}": "eslint  --fix",
    "*.{css}": "stylelint --fix",
    "*.{less}": "stylelint --fix --custom-syntax postcss-less",
    "*.{vue,ts,less,md,json}": "prettier --write"
  },
  "dependencies": {
    "core-js": "3",
    "pinia": "^2.0.14",
    "vue": "^3.2.36",
    "vue-router": "4"
  }
}
